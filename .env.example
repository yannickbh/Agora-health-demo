# ── Agora Credentials (console.agora.io) ──────────────────────
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERT=your_agora_app_certificate_here
AGORA_CUSTOMER_ID=your_agora_customer_id_here
AGORA_CUSTOMER_SECRET=your_agora_customer_secret_here

# ── OpenAI (for LLM + TTS) ────────────────────────────────────
OPENAI_API_KEY=sk-...

# ── Azure Cognitive Services TTS (optional) ───────────────────
# If not set, falls back to OpenAI TTS automatically
AZURE_TTS_KEY=your_azure_tts_key_here
AZURE_TTS_REGION=eastus

# ── Language & Voice ──────────────────────────────────────────
# English:    AGENT_LANGUAGE=en-US    TTS_VOICE=en-US-JennyNeural
# Portuguese: AGENT_LANGUAGE=pt-BR   TTS_VOICE=pt-BR-FranciscaNeural
AGENT_LANGUAGE=pt-BR
TTS_VOICE=pt-BR-FranciscaNeural

# ── AI Agent Settings ─────────────────────────────────────────
AGENT_UID=9999
LLM_MODEL=gpt-4o
